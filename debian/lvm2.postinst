#!/bin/sh

set -e

case "$1" in
    configure)
        /sbin/vgcfgbackup >/dev/null 2>&1 || :
        invoke-rc.d lvm2 start || :
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *) 
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

#DEBHELPER#

exit 0
