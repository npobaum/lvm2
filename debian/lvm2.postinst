#!/bin/sh

set -e

## Was re-introduced in Quantal, can be removed in R.
dpkg-maintscript-helper rm_conffile /etc/init.d/lvm2 2.02.95-4ubuntu1~ -- "$@"
#

case "$1" in
    configure)
        vgcfgbackup >/dev/null 2>&1 || :
        if [ -x /usr/sbin/update-initramfs ]; then
            update-initramfs -u
        fi
    ;;
esac

#DEBHELPER#

exit 0
